<EntityDefinitions class="AI">

	<!-- Enemies (LOAD AFTER WEAPONS)-->

	<EntityDefinition name="Walker" initial_health="1" points="300">
		<Movement max_acceleration="3000.0" max_speed="20.0" max_deceleration="100.0" jump_impulse="30.0"/>
		<Visuals animation_set="Walker" default_sprite="Walker_idle_0"/>
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="ignore_correction" layer="enemy"/>
		</Physics>
		<!--AI behavior="charge" damage_on_touch="1" damage_on_charge="2" charge_speed="100.0" knockback="30.0" charge_duration="1.0" rest_duration="1.0"/>-->
		<AI behavior="bomber" projectile="Missile"/>
		<Audio on_death="Data\Audio\SFX\The Essential Retro Video Game Sound Effects Collection [512 sounds] By Juhani Junkala\Death Screams\Human\sfx_deathscream_human6.wav"/>
	</EntityDefinition>

	<EntityDefinition name="Tank" initial_health="10">
		<Movement max_acceleration="2000.0" max_speed="12.0" max_deceleration="100.0" jump_impulse="50.0"/>
		<Visuals animation_set="Tank" default_sprite="Tank_idle_0"/>
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="no_correction" layer="enemy" can_destroy_voxels="true"/>
		</Physics>
		<AI behavior="smash"/>
		<Audio on_death="Data\Audio\SFX\The Essential Retro Video Game Sound Effects Collection [512 sounds] By Juhani Junkala\Death Screams\Human\sfx_deathscream_human4.wav" on_damage_taken="Data\Audio\SFX\The Essential Retro Video Game Sound Effects Collection [512 sounds] By Juhani Junkala\Death Screams\Human\sfx_deathscream_human5.wav"/>
	</EntityDefinition>

	<EntityDefinition name="Dog" initial_health="1">
		<Movement max_acceleration="3000.0" max_speed="10.0" max_deceleration="100.0" jump_impulse="50.0"/>
		<Visuals animation_set="Dog" default_sprite="Dog_idle_0"/>
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="enemy"/>
		</Physics>
		<AI behavior="charge" damage_on_touch="1" damage_on_charge="2" charge_speed="50.0" knockback="30.0" charge_duration="1.0" rest_duration="1.0"/>
		<Audio on_death="Data\Audio\SFX\dog\dog-snarl.flac"/>
	</EntityDefinition>

	<EntityDefinition name="Soldier" initial_health="1">
		<Movement max_acceleration="2000.0" max_speed="10.0" 
			max_deceleration="100.0" jump_impulse="10.0"/>
		<Visuals animation_set="Soldier" default_sprite="Soldier_idle_0"/>
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="enemy"/>
		</Physics>
		<AI behavior="shoot_circle" weapon="Pistol" shoot_range="100.0"/>
		<Audio on_death="Data\Audio\SFX\The Essential Retro Video Game Sound Effects Collection [512 sounds] By Juhani Junkala\Death Screams\Human\sfx_deathscream_human6.wav"/>
	</EntityDefinition>

	<EntityDefinition name="Bunny" initial_health="1" points="500">
		<Movement max_acceleration="3000.0" max_speed="20.0" max_deceleration="100.0" jump_impulse="80.0"/>
		<Visuals animation_set="Bunny" default_sprite="Bunny_idle_0"/>
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="enemy"/>
		</Physics>
		<!--AI behavior="charge" damage_on_touch="1" damage_on_charge="2" charge_speed="100.0" knockback="30.0" charge_duration="1.0" rest_duration="1.0"/>-->
		<AI behavior="pursue_jump"/>
		<Audio on_death="Data\Audio\SFX\The Essential Retro Video Game Sound Effects Collection [512 sounds] By Juhani Junkala\Death Screams\Human\sfx_deathscream_human6.wav"/>
	</EntityDefinition>

</EntityDefinitions>