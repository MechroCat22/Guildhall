<EntityDefinitions>

	<!-- Players -->

	<EntityDefinition name="PlayerUninitialized" initial_health="0" id="0">

		<!--Movement Parameters-->
		<Movement max_acceleration="300.0" max_speed="40.0" max_deceleration="100.0" jump_impulse="80.0"/>

		<!--Visuals-->
		<Visuals default_sprite="Default"/>

		<!--Physics-->
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="player"/>
		</Physics>

	</EntityDefinition>


	<EntityDefinition name="OldMan" initial_health="5" id="1">

		<!--Movement Parameters-->
		<Movement max_acceleration="300.0" max_speed="40.0" max_deceleration="100.0" jump_impulse="80.0"/>

		<!--Visuals-->
		<Visuals animation_set="OldMan" default_sprite="OldMan_idle_0"/>

		<!--Physics-->
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="player"/>
		</Physics>

	</EntityDefinition>

	<EntityDefinition name="Nerd" initial_health="5" id="2">

		<!--Movement Parameters-->
		<Movement max_acceleration="300.0" max_speed="40.0" max_deceleration="100.0" jump_impulse="80.0"/>

		<!--Visuals-->
		<Visuals animation_set="Nerd" default_sprite="Nerd_idle_0"/>

		<!--Physics-->
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="player"/>
		</Physics>

	</EntityDefinition>

	<EntityDefinition name="Cat" initial_health="5" id="3">

		<!--Movement Parameters-->
		<Movement max_acceleration="500.0" max_speed="50.0" max_deceleration="500.0" jump_impulse="80.0"/>

		<!--Visuals-->
		<Visuals animation_set="Cat" default_sprite="Cat_idle_0"/>

		<!--Physics-->
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="player"/>
		</Physics>

	</EntityDefinition>

	<EntityDefinition name="Mouse" initial_health="8" id="4">

		<!--Movement Parameters-->
		<Movement max_acceleration="300.0" max_speed="40.0" max_deceleration="100.0" jump_impulse="80.0"/>

		<!--Visuals-->
		<Visuals animation_set="Mouse" default_sprite="Mouse_idle_0"/>

		<!--Physics-->
		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="player"/>
		</Physics>

	</EntityDefinition>

	<!-- Projectiles -->

	<EntityDefinition name="Bullet" id="9">

		<Visuals default_sprite="Bullet"/>

		<Physics physics_type="dynamic" has_gravity="false">
			<CollisionDefinition response="ignore_correction" can_destroy_voxels="true" knockback="10.0"/>
		</Physics>

		<Projectile speed="200.0" damage="2" lifetime="0.7"/>

	</EntityDefinition>

	<EntityDefinition name="Shell" id="10">

		<Visuals default_sprite="Shell"/>

		<Physics physics_type="dynamic" has_gravity="false">
			<CollisionDefinition response="ignore_correction" can_destroy_voxels="true"/>
		</Physics>

		<Projectile speed="150.0" hit_radius="0.0" damage="1" lifetime="0.3"/>

	</EntityDefinition>

	<EntityDefinition name="Flame" id="20">

		<Visuals default_sprite="Flame"/>

		<Physics physics_type="dynamic" has_gravity="false">
			<CollisionDefinition response="ignore_correction" can_destroy_voxels="true"/>
		</Physics>

		<Projectile speed="30.0" hit_radius="0.0" damage="1" lifetime="0.5"/>

	</EntityDefinition>

	<EntityDefinition name="Missile" id="22">

		<Visuals default_sprite="Missile"/>

		<Physics physics_type="dynamic" has_gravity="false">
			<CollisionDefinition response="ignore_correction" can_destroy_voxels="true"/>
		</Physics>

		<Projectile speed="100.0" hit_radius="15.0" damage="10" lifetime="2.0"/>

	</EntityDefinition>


	<!-- Weapons (LOAD AFTER PROJECTILES) -->
	<EntityDefinition name="Pistol" id="11">

		<Visuals default_sprite="Pistol"/>

		<Physics physics_type="dynamic">
			<CollisionDefinition response="ignore_correction" has_gravity="true" layer="item"/>
		</Physics>

		<Weapon fire_rate="4.0" fire_spread="0.0" projectile="Bullet" count_per_shot="1"/>

	</EntityDefinition>

	<EntityDefinition name="Shotgun" id="12">

		<Visuals default_sprite="Shotgun"/>

		<Physics physics_type="dynamic">
			<CollisionDefinition response="ignore_correction" has_gravity="true" layer="item"/>
		</Physics>

		<Weapon fire_rate="2.0" fire_spread="0.4" projectile="Shell" count_per_shot="6" initial_ammo="60"/>

	</EntityDefinition>

	<EntityDefinition name="Flamethrower" id="19">

		<Visuals default_sprite="Flamethrower"/>

		<Physics physics_type="dynamic">
			<CollisionDefinition response="ignore_correction" has_gravity="true" layer="item"/>
		</Physics>

		<Weapon fire_rate="15.0" fire_spread="0.2" projectile="Flame" count_per_shot="15" initial_ammo="600"/>

	</EntityDefinition>

	<EntityDefinition name="MissileLauncher" id="21">

		<Visuals default_sprite="MissileLauncher"/>

		<Physics physics_type="dynamic">
			<CollisionDefinition response="ignore_correction" has_gravity="true" layer="item"/>
		</Physics>

		<Weapon fire_rate="2.0" fire_spread="0.0" projectile="Missile" count_per_shot="1" initial_ammo="5"/>

	</EntityDefinition>

	<!-- Enemies (LOAD AFTER WEAPONS)-->

	<EntityDefinition name="Walker" initial_health="1" points="300" id="13">

		<Movement max_acceleration="3000.0" max_speed="20.0" max_deceleration="100.0" jump_impulse="30.0"/>

		<Visuals animation_set="Walker" default_sprite="Walker_idle_0"/>

		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="enemy"/>
		</Physics>


		<!--AI behavior="charge" damage_on_touch="1" damage_on_charge="2" charge_speed="100.0" knockback="30.0" charge_duration="1.0" rest_duration="1.0"/>-->
		<AI behavior="pursue_direct"/>

	</EntityDefinition>

	<EntityDefinition name="Tank" initial_health="10" id="14">

		<Movement max_acceleration="2000.0" max_speed="5.0" max_deceleration="100.0" jump_impulse="10.0"/>

		<Visuals animation_set="Tank" default_sprite="Tank_idle_0"/>

		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="enemy"/>
		</Physics>


		<AI behavior="pursue_direct"/>

	</EntityDefinition>


	<EntityDefinition name="Charger" initial_health="1" id="15">

		<Movement max_acceleration="3000.0" max_speed="10.0" max_deceleration="100.0" jump_impulse="50.0"/>

		<Visuals animation_set="Charger" default_sprite="Charger_idle_0"/>

		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="enemy"/>
		</Physics>


		<AI behavior="charge" damage_on_touch="1" damage_on_charge="2" charge_speed="50.0" knockback="30.0" charge_duration="1.0" rest_duration="1.0"/>

	</EntityDefinition>

	<EntityDefinition name="Soldier" initial_health="1" id="16">

		<Movement max_acceleration="2000.0" max_speed="10.0" 
			max_deceleration="100.0" jump_impulse="10.0"/>

		<Visuals animation_set="Soldier" default_sprite="Soldier_idle_0"/>

		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="share_correction" layer="enemy"/>
		</Physics>


		<AI behavior="shoot_circle" weapon="Pistol" shoot_range="100.0"/>

	</EntityDefinition>

	<!-- Statics -->

 	<!-- Needed for it to work in the system -->
	<EntityDefinition name="Particle" id="17">

		<Physics physics_type="dynamic" has_gravity="true">
			<CollisionDefinition response="full_correction" layer="world"/>
		</Physics>

	</EntityDefinition>

	<EntityDefinition name="Tree1" id="18">
		<Visuals default_sprite="Tree1" destructible="true"/>

		<Physics physics_type="static">
			<CollisionDefinition response="no_correction" layer="world"/>
		</Physics>
		
	</EntityDefinition>

	<EntityDefinition name="House" id="23">

		<Visuals default_sprite="House" destructible="true"/>

		<Physics physics_type="static">
			<CollisionDefinition response="no_correction" layer="world"/>
		</Physics>
		
	</EntityDefinition>

	<EntityDefinition name="TestCube" id="24">

		<Visuals default_sprite="TestCube" destructible="true"/>

		<Physics physics_type="static">
			<CollisionDefinition response="no_correction" layer="world"/>
		</Physics>
		
	</EntityDefinition>

</EntityDefinitions>