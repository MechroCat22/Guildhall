<EntityDefinitions>

	<EntityDefinition name="Player" defaultHealth="5">

		<!--Movement Parameters-->
		<Movement maxAcceleration="300.0" maxSpeed="40.0" maxDeceleration="100.0" jumpImpulse="80.0"/>

		<!--Visuals-->
		<Animation set="Robot" defaultSprite="Robot_idle_0"/>

		<!--Physics-->
		<Physics physicsType="dynamic" hasGravity="true">
			<CollisionDefinition response="share_correction" layer="player"/>
		</Physics>

		<!--AI-->

	</EntityDefinition>

	<EntityDefinition name="Bullet">

		<!--Visuals-->
		<Animation defaultSprite="Bullet"/>

		<!--Physics-->
		<Physics physicsType="dynamic" hasGravity="false">
			<CollisionDefinition response="ignore_correction"/>
		</Physics>

	</EntityDefinition>

	<EntityDefinition name="Robot" defaultHealth="1">

		<!--Movement Parameters-->
		<Movement maxAcceleration="3000.0" maxSpeed="0.0" maxDeceleration="100.0" jumpImpulse="120.0"/>

		<!--Visuals-->
		<Animation set="Robot" defaultSprite="Robot_idle_0"/>

		<!--Physics-->
		<Physics physicsType="dynamic" hasGravity="true">
			<CollisionDefinition response="share_correction" layer="enemy"/>
		</Physics>

		<!--AI-->
		<AI>
			<!--<Shoot projectile="Bullet" fireRate="1.0"/>-->
			<PursueDirect/>
		</AI>

	</EntityDefinition>

  <EntityDefinition name="Item_test">

	<Animation defaultSprite="Item_test"/>

    <!--Physics-->
    <Physics physicsType="dynamic" hasGravity="true">
      <CollisionDefinition response="ignore_correction" layer="world"/>
    </Physics>

    <Item bullets="1" shells="2" energy="3" explosives="4" money="5"/>

  </EntityDefinition>

	<EntityDefinition name="Wall">

		<!--Visuals-->
		<Animation defaultSprite="Wall" destructible="true"/>

		<!--Physics-->
		<Physics physicsType="static">
			<CollisionDefinition response="no_correction" layer="world"/>
		</Physics>

	</EntityDefinition>

	<EntityDefinition name="Window">

		<!--Visuals-->
		<Animation defaultSprite="Window"/>

		<!--Physics-->
		<Physics physicsType="static">
			<CollisionDefinition response="no_correction" layer="world"/>
		</Physics>

	</EntityDefinition>

  <EntityDefinition name="Stand">

    <!--Visuals-->
    <Animation defaultSprite="Stand" destructible="true"/>

    <!--Physics-->
    <Physics physicsType="static">
      <CollisionDefinition response="no_correction" layer="world"/>
    </Physics>

  </EntityDefinition>


	<EntityDefinition name="Particle">

		<!--Physics-->
		<Physics physicsType="dynamic" hasGravity="true">
			<CollisionDefinition response="full_correction" layer="world"/>
		</Physics>

		<!--AI-->

	</EntityDefinition>

</EntityDefinitions>