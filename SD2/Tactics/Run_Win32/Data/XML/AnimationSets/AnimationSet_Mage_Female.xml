<!-- 
   Goal of an animation set is to alias keywords to one or more animations.
   This allows us to add animation variations, or control an animation using 
   known keywords that alias to actual aniamtions.
-->

<animationset name="mage_f">

   <alias alias="idle">
      <animation name="mage_f.idle" />
   </alias>
   <alias alias="weak">
      <animation name="mage_f.weak" />
   </alias>
   <alias alias="walk">
      <animation name="mage_f.walk" />
   </alias>
   <alias alias="hit">
      <animation name="mage_f.hit" />
   </alias>
   <alias alias="jump">
      <animation name="mage_f.jump" />
   </alias>
   <alias alias="attack">
      <animation name="mage_f.attack" />
   </alias>
   <alias alias="cast">
      <animation name="mage_f.spell_attack" />
   </alias>
   <alias alias="dead">
      <animation name="mage_f.dead" />
   </alias>

</animationset>
