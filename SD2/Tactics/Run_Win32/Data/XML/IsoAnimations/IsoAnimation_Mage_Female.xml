<isoanimations>

   <isoanimation name="mage_f.idle" playmode="loop">
      <frame isosprite="mage_f.idle" duration="1.0" />
   </isoanimation>
   <isoanimation name="mage_f.weak" playmode="loop">
      <frame isosprite="mage_f.weak" duration="1.0" />
   </isoanimation>
   <isoanimation name="mage_f.dead" playmode="loop">
      <frame isosprite="mage_f.dead" duration="1.0" />
   </isoanimation>
   <isoanimation name="mage_f.walk" playmode="loop">
      <frame isosprite="mage_f.walk0" duration=".25" />
      <frame isosprite="mage_f.walk1" duration=".25" />
   </isoanimation>
   <isoanimation name="mage_f.attack" playmode="clamp">
      <frame isosprite="mage_f.walk1" duration=".25" />
      <frame isosprite="mage_f.attack2" duration=".1" />
      <frame isosprite="mage_f.attack3" duration=".1" />
      <frame isosprite="mage_f.attack4" duration=".1" />
   </isoanimation>

   <isoanimation name="mage_f.charge" playmode="clamp">
      <frame isosprite="mage_f.cast" duration=".25" />
   </isoanimation>

   <isoanimation name="mage_f.spell_attack" playmode="clamp">
      <frame isosprite="mage_f.attack0" duration=".75" />
      <frame isosprite="mage_f.attack3" duration=".25" />
   </isoanimation>

   <isoanimation name="mage_f.hit" playmode="clamp">
      <frame isosprite="mage_f.hit" duration="1.0" />
   </isoanimation>

   <isoanimation name="mage_f.jump" playmode="clamp">
      <frame isosprite="mage_f.crouch" duration=".25" />
      <frame isosprite="mage_f.cast" duration=".50" />
      <frame isosprite="mage_f.crouch" duration=".25" />
   </isoanimation>

</isoanimations>